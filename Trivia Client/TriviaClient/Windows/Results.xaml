<Window x:Class="TriviaClient.Windows.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leaderboard" Height="450" Width="800"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Background image -->
        <Image Source="/Photos/download.jpeg" Stretch="Fill" Panel.ZIndex="0"/>

        <!-- Overlay leaderboard content -->
        <Grid Margin="20" Panel.ZIndex="1">
            <Grid.Resources>
                <Style x:Key="ModernButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="#FF3A86FF"/>
                    <Setter Property="Foreground" Value="#F8F8F8"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Padding" Value="10,10"/>
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Height" Value="80"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#66000000" BlurRadius="10" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF69B4"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#00FFC6" BlurRadius="15" ShadowDepth="0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#00FFC6"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#6C7A89"/>
                            <Setter Property="Foreground" Value="#ECECFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="MainMenu" Content="Main Menu"
                Style="{StaticResource ModernButtonStyle}"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,252,0,0"
                Click="MainMenu_Click"
                Grid.Row="1" Width="120"/>

            <TextBlock Text="🏆 Trivia Leaderboard 🏆"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="234,10,114,10"/>

            <Border Grid.Row="1"
                    Background="#AA000000"
                    Padding="10"
                    CornerRadius="10"
                    HorizontalAlignment="Left"
                    Width="500" Margin="130,10,0,-10">
                <DataGrid x:Name="LeaderboardGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          CanUserResizeColumns="False"
                          CanUserSortColumns="False"
                          GridLinesVisibility="None"
                          RowBackground="#EEEEEE"
                          AlternatingRowBackground="#DDDDDD"
                          ColumnHeaderHeight="35"
                          RowHeight="30"
                          Background="#AA000000"
                          BorderThickness="0"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto"
                          FontSize="14"
                          FontWeight="SemiBold"
                          HorizontalContentAlignment="Center"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                        <DataGridTextColumn Header="✔ Correct" Binding="{Binding CorrectAnswerCount}" Width="85"/>
                        <DataGridTextColumn Header="✘ Wrong" Binding="{Binding WrongAnswerCount}" Width="75"/>
                        <DataGridTextColumn Header="⏱ Avg Time" Binding="{Binding AverageAnswerTime}" Width="100"/>
                        <DataGridTextColumn Header="⭐ Score" Binding="{Binding Score}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
