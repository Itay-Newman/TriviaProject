                <ListBoxItem Content="1. SkullCrusher - 200 pts" Foreground="White"/>
                <ListBoxItem Content="2. TriviaNinja - 180 pts" Foreground="White"/>
                <ListBoxItem Content="3. QuizMaster - 165 pts" Foreground="White"/>
                <ListBoxItem Content="4. Brainiac - 150 pts" Foreground="White"/>
