<Page x:Class="TriviaClient.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:TriviaClient"
      mc:Ignorable="d"
      Title="Trivia Game" Height="450" Width="800" Background="Black">

    <Page.Resources>
        <!-- Stylish Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF3A86FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#66000000" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF265DAB"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1B3A6B"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFB0B0B0"/>
                    <Setter Property="Foreground" Value="#FFEEEEEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Image Source="/Photos/download.jpeg" Stretch="Fill" Panel.ZIndex="0"/>

        <Grid VerticalAlignment="Center" Panel.ZIndex="1">
            <TextBlock Text="Trivia" FontSize="48" FontWeight="Bold" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <StackPanel HorizontalAlignment="Center" Margin="0,80,0,0" Width="300">
                <xctk:WatermarkTextBox x:Name="Username" Watermark="Username" Height="45" FontSize="24" TextAlignment="Left" Background="White" Foreground="Gray" Margin="0,0,0,10"/>

                <xctk:WatermarkPasswordBox x:Name="Password" Watermark="Password" Height="45" FontSize="24" Margin="0,0,0,10"
                                           Padding="5"
                                           VerticalContentAlignment="Center"
                                           ToolTip="Password"/>

                <Button x:Name="SignInButton" Content="Sign In" Width="120" Height="45" FontSize="22" FontWeight="Bold" Click="SignInButton_Click" Style="{StaticResource ModernButtonStyle}"/>
                <Button x:Name="SignUpButton" Content="Sign Up" Width="120" Height="45" FontSize="22" FontWeight="Bold" Click="SignUpButton_Click" Margin="0,10,0,0" Style="{StaticResource ModernButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
