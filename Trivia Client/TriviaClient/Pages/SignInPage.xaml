<Page x:Class="TriviaClient.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:TriviaClient"
      mc:Ignorable="d"
      Title="Trivia Game" Height="450" Width="800" Background="Black">

    <Grid>
        <Image Source="/Photos/download.jpeg" Stretch="Fill" Panel.ZIndex="0"/>

        <Grid VerticalAlignment="Center" Panel.ZIndex="1">
            <TextBlock Text="Trivia" FontSize="48" FontWeight="Bold" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <StackPanel HorizontalAlignment="Center" Margin="0,80,0,0" Width="300">
                <xctk:WatermarkTextBox x:Name="Username" Watermark="Username" Height="45" FontSize="24" TextAlignment="Left" Background="White" Foreground="Gray" Margin="0,0,0,10"/>
                <xctk:WatermarkTextBox x:Name="Password" Watermark="Password" Height="45" FontSize="24" TextAlignment="Left" Background="White" Foreground="Gray" Margin="0,0,0,10"/>
                <Button x:Name="SignInButton" Content="Sign In" Width="120" Height="45" FontSize="22" FontWeight="Bold" Background="Gray" Foreground="Black" Click="SignInButton_Click"/>
                <Button x:Name="SignUpButton" Content="Sign Up" Width="120" Height="45" FontSize="22" FontWeight="Bold" Background="Gray" Foreground="Black" Click="SignUpButton_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
