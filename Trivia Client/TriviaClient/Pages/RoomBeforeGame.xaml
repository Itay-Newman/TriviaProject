<Page x:Class="TriviaClient.Pages.RoomBeforeGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Room Users">

    <Grid Background="Transparent">
        <Border Background="#AA000000" CornerRadius="10" Padding="20" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Connected Players" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <ListBox FontSize="18" Background="Transparent" BorderThickness="0" Foreground="White">
                    <ListBoxItem Content="👑 Alice (Admin)" FontWeight="Bold" Foreground="Gold"/>
                    <ListBoxItem Content="Bob"/>
                    <ListBoxItem Content="Charlie"/>
                    <ListBoxItem Content="Dana"/>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Page>
