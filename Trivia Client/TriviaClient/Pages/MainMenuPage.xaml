<Page x:Class="TriviaClient.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TriviaClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Trivia Game">

    <Grid>
        <!-- Background image spans the whole page -->
        <Image Source="/Photos/download.jpeg" Stretch="Fill" Panel.ZIndex="0"/>

        <!-- Main layout grid on top of background -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar with evenly spaced buttons -->
            <Grid Grid.Column="0" Background="#AA1E1E1E" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="Create Room" FontSize="18" Margin="10" Click="CreateRoom_Click" Grid.Row="0"/>
                <Button Content="Join Room" FontSize="18" Margin="10" Click="JoinRoom_Click" Grid.Row="1"/>
                <Button Content="Statistics" FontSize="18" Margin="10" Click="Statistics_Click" Grid.Row="2"/>
                <Button Content="Settings" FontSize="18" Margin="10" Click="Settings_Click" Grid.Row="3"/>
                <Button Content="Exit" FontSize="18" Margin="10" Click="ExitApp_Click" Grid.Row="4"/>
            </Grid>

            <!-- Main dynamic content area -->
            <ContentControl x:Name="MainContent" Grid.Column="1" Margin="20"/>
        </Grid>
    </Grid>
</Page>
