<Page x:Class="TriviaClient.Pages.JoinRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TriviaClient.Pages"
      mc:Ignorable="d"
      Title="Join Room" d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Black">
        <Image Source="/Photos/download.jpeg" Stretch="Fill" Panel.ZIndex="0"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Join a Room"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,20"/>

            <ListBox x:Name="RoomsList"
                     Grid.Row="1"
                     Margin="50,20"
                     FontSize="20"
                     Background="#AA000000"
                     Foreground="White"
                     BorderThickness="0"
                     SelectionMode="Single"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Join Room" Width="150" Height="45" Margin="10,0" Click="JoinRoom_Click"/>
                <Button Content="Refresh" Width="150" Height="45" Margin="10,0" Click="Refresh_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
